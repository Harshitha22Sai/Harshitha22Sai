function findMax(numbers) {
  if (!Array.isArray(numbers) || numbers.length === 0) {
    return undefined; // Return undefined if the input is not an array or is an empty array
  }

  let max = numbers[0]; // Assume the first element is the maximum

  for (let i = 1; i < numbers.length; i++) {
    if (numbers[i] > max) {
      max = numbers[i]; // Update max if we find a larger element
    }
  }

  return max;
}
Copy code
const numbersArray = [10, 5, 20, 15, 8];
const maxNumber = findMax(numbersArray);
console.log(maxNumber);






